{
  "rewrites": [
    { 
      "source": "/api/(.*)", 
      "destination": "/api/index.js",
      "has": [
        {
          "type": "header",
          "key": "x-vercel-skip-rewrite",
          "value": "true"
        }
      ]
    },
    { "source": "/(.*)", "destination": "/" }
  ],
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ]
}
