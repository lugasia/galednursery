{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "api/plants.js", "use": "@vercel/node" },
    { "src": "api/categories2.js", "use": "@vercel/node" },
    { "src": "api/updateData.js", "use": "@vercel/node" },
    { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "client/build" } }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    { "source": "/(.*)", "destination": "/client/build/index.html" }
  ]
}
