{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "api/test.js", "use": "@vercel/node" }, // הוסף build עבור קובץ הבדיקה
    { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" }, // השאר את זה כרגע
    { "source": "/hello", "destination": "/api/test.js" }, // Rewrite פשוט לקובץ הבדיקה
    { "source": "/(.*)", "destination": "/client/build/index.html" } // השאר גם את זה
  ]
}